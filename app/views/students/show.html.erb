<div class="row">
  <div class="col s6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @student.name %></span>
        <span class="card-title"><%= @student.email %></span>
        <p>Course enrollments : None</p>
      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to '<i class="material-icons right">create</i>"Edit your profile"'.html_safe, edit_student_path(@student), class:"waves-effect waves-light btn" %>
    <% end %>
  </div>
</div>
