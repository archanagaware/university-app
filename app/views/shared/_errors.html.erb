<% if obj.errors.any? %>
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten-2">
          <div class="white-text">
            <ul>
              <% obj.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
